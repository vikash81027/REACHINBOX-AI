# Database
DATABASE_URL="postgresql://reachinbox:reachinbox_secret@localhost:5432/reachinbox_db"

# Redis
REDIS_URL="redis://localhost:6379"

# Session Secret (generate a random string)
SESSION_SECRET="your-super-secret-session-key-change-this"

# Google OAuth (get from https://console.cloud.google.com)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Ethereal Email (get from https://ethereal.email)
# These will be auto-generated on first run if not provided
ETHEREAL_USER=""
ETHEREAL_PASS=""

# Rate Limiting Configuration
MAX_EMAILS_PER_HOUR_PER_SENDER=100
MIN_DELAY_BETWEEN_SENDS_MS=2000
WORKER_CONCURRENCY=5

# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:3000"

# Backend URL (for OAuth callback)
BACKEND_URL="http://localhost:3001"
